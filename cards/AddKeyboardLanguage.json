{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "size": "medium",
                    "weight": "bolder",
                    "text": "**Add a keyboard language in Windows 10**"
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "To add a new keyboard language, follow these steps:",
                    "wrap": true
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "FactSet",
                    "facts": [
                        {
                            "title": "1.",
                            "value": "Select Windows logo **Start** button > Gear-shaped **Settings** icon > **Time & Language** > **Language**."
                        },
                        {
                            "title": "2.",
                            "value": "Under **Preferred languages**, select the language that contains the keyboard you want. Choose **Options**."
                        },
                        {
                            "title": "3.",
                            "value": "Select **Add a keyboard** and choose your desired keyboard."
                        },
                        {
                            "title": "4.",
                            "value": "If you do not see your desired keyboard, you may need to add a new language to get additional options. Return to the Language settings page, and select **Add a language**."
                        }
                    ]
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.OpenUrl",
                            "title": "Open language settings",
                            "style": "positive",
                            "url": "ms-settings:regionlanguage"
                        }
                    ]
                },
                {
                    "type": "TextBlock",
                    "spacing": "Medium",
                    "text": "Did this solve your problem?"
                },
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Yes",
                            "data": "Yes"
                        },
                        {
                            "type": "Action.Submit",
                            "title": "No",
                            "data": "No"
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0"
}